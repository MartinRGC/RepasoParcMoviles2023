<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.OpcionesFragment" >

    <TextView
        android:id="@+id/tvopciones"
        android:layout_width="139dp"
        android:layout_height="43dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="@string/tvopciones"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/btnIMC"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnSignoz"
        android:layout_width="273dp"
        android:layout_height="73dp"
        android:layout_marginTop="28dp"
        android:text="Signo Zodiacal"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.471"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnIMC" />

    <Button
        android:id="@+id/gtnGener"
        android:layout_width="273dp"
        android:layout_height="63dp"
        android:layout_marginTop="44dp"
        android:text="Generaciones"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.463"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSignoz" />

    <Button
        android:id="@+id/button4"
        android:layout_width="194dp"
        android:layout_height="78dp"
        android:layout_marginTop="176dp"
        android:text="Regresar"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.456"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gtnGener"
        app:layout_constraintVertical_bias="0.078" />

    <Button
        android:id="@+id/btnIMC"
        android:layout_width="262dp"
        android:layout_height="63dp"
        android:text="IMC"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.429"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.247" />
</androidx.constraintlayout.widget.ConstraintLayout>